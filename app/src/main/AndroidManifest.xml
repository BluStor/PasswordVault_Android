<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.blustor.passwordvault">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.UnlockActivity" android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.InitializeActivity" android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".activities.GroupActivity" />
        <activity android:name=".activities.EditGroupActivity" android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.EditEntryActivity" android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.AddGroupActivity" android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.AddEntryActivity" android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activities.CloseActivity" />
        <receiver
            android:name=".receivers.AppBroadcastReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="co.blustor.passwordvault.lock_database" />
            </intent-filter>
        </receiver>
        <service
            android:name=".services.NotificationService"
            android:exported="false" />
    </application>

</manifest>